<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pledge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/light_purple</item>
        <item name="android:colorSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_4b</item>
        <item name="android:shadowColor">@color/grey_d7</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.Pledge" parent="Base.Theme.Pledge" />
    <style name="Theme.Pledge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Pledge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Pledge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>